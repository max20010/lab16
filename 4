#include "stdafx.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int n, n1, x=0;
	cout << "Введите размер массива: ";
	cin >> n;
	int* m = new int[n];
	cout << "Заполните массив: ";
	for (int i = 0; i < n; i++) {
		cin >> m[i];
	}
	for (int i = 0; i < n; i++) {
		if (m[i] < 0) {
			x++;
		}
	}
	n1 = n + x;
	int* m1 = new int[n1];
	for (int i=0,j = 0;i < n1;i++,j++) {
		if (m[j] < 0) {
			m1[i] = m[j];
			i++;
			m1[i] = 0;
		}
		else
		{
			m1[i] = m[j];
		}
	}
	for (int i = 0; i < n1; i++) {
		cout << m1[i] <<"\t";
	}
	cout << endl;
	delete[]m;
	delete[]m1;
}
