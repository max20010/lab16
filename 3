#include "stdafx.h"
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	int n, n1, x;
	cout << "Введите размер массива: ";
	cin >> n;
	int* m = new int[n];
	cout << "Заполните массив: ";
	for (int i = 0; i < n; i++) {
		cin >> m[i];
	}
	int max = m[0], max_x = 0, min = m[0], min_x = 0;
	for (int i = 0; i < n; i++) {
		if (m[i] > max) {
			max = m[i];
			max_x = i;
		}
		if (m[i] < min) {
			min = m[i];
			min_x = i;
		}
	}
	n1 = n + 2;
	int* m1 = new int[n1];
	for (int i = 0,j=0;i < n1;i++,j++) {
		if (j == min_x) {
			m1[i] = 0;
			i++;
			m1[i] = min;
		}else if (j == max_x) {
			m1[i] = max;
			i++;
			m1[i] = 0;
		}
		else
		{
			m1[i] = m[j];
		}
	}
	
	for (int i = 0; i < n1; i++) {
		cout << m1[i] <<"\t";
	}
	cout << endl;
	delete[]m;
	delete[]m1;
}
